{
    //editor lines are VS code settings
    //with editor.formatOnSave everytime you save, the code will be automatically formatted.
    "editor.formatOnSave": true,
    "output.smartScroll.enabled": true,
    "editor.rulers": [
        120
    ],
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.envFile": "${workspaceFolder}/.env",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "json.format.keepLines": true,
    //ignore files like .gitignore or .ignore will not be in search results
    "search.useIgnoreFiles": true,
    //do not show files from .gitignore in vs code explorer
    "explorer.excludeGitIgnore": true,
    //if enable preview is false, files will always open in a new tab
    "workbench.editor.enablePreview": false,
    //if auto reveal is false, explorer will not automatically scroll to or highlight files when they are open
    "explorer.autoReveal": false,
    "html.suggest.html5": true,
    "cSpell.words": [
        "creational", "designpatterns", "creationalpatterns", "structuralpatterns"
    ]
}