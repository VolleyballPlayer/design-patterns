{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Python virtual environment",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "/usr/bin/python3.11",
            "args": [
                "-m",
                "venv",
                ".venv"
            ]
        },
        {
            "label": "pip list",
            "hide": false,
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pip",
                "list"
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "pip upgrade",
            "hide": false,
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "--upgrade",
                "pip",
                "setuptools"
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Editable install [dev, test, docs]",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "-ve",
                ".[dev, test, docs]"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": false
            },
            "problemMatcher": [ ]
        },
        {
            "label": "Sphinx: HTML",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "sphinx",
                "-b",
                "html",
                "-E",
                "source",
                "html"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}/docs",
            "dependsOn": [ "Sphinx-ApiDoc" ]
            },
            "problemMatcher": [ ]
        },
        {
            "label": "Sphinx-ApiDoc",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [ "-m", "sphinx.ext.apidoc", "-o", "docs/source/technical_documentation/autodoc", "-f", "src/designpatterns"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": { "SPHINX_APIDOC_OPTION": "members,show-inheritance"}
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": false
                },
            "dependsOn": [ "Clear Sphinx-ApiDoc Output" ]    
        },
        {
            "label": "Clear Sphinx-ApiDoc Output",
            "type": "shell",
            "command": "rm",
            "args":  ["-r", "docs/source/technical_documentation/autodoc" ]
        }
    ]
}